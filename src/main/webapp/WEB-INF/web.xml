    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <!-- Contact Servlet -->
    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.gaadidost.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <!-- Service: Wash -->
    <servlet>
        <servlet-name>WashServlet</servlet-name>
        <servlet-class>com.gaadidost.WashServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WashServlet</servlet-name>
        <url-pattern>/service/wash</url-pattern>
    </servlet-mapping>

    <!-- Service: Repair -->
    <servlet>
        <servlet-name>RepairServlet</servlet-name>
        <servlet-class>com.gaadidost.RepairServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RepairServlet</servlet-name>
        <url-pattern>/service/repair</url-pattern>
    </servlet-mapping>

    <!-- Service: Oil -->
    <servlet>
        <servlet-name>OilServlet</servlet-name>
        <servlet-class>com.gaadidost.OilServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OilServlet</servlet-name>
        <url-pattern>/service/oil</url-pattern>
    </servlet-mapping>

    <!-- Service: Buy -->
    <servlet>
        <servlet-name>BuyServlet</servlet-name>
        <servlet-class>com.gaadidost.BuyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuyServlet</servlet-name>
        <url-pattern>/service/buy</url-pattern>
    </servlet-mapping>

    <!-- Service: Sell -->
    <servlet>
