        <servlet-class>com.gaadidost.SellServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SellServlet</servlet-name>
        <url-pattern>/service/sell</url-pattern>
    </servlet-mapping>

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

